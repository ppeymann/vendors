  "version": "0.2.0",
  "configurations": [
    {
      "name": "User Service",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/vendora/user/main.go",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "API Gateway",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/vendora/gateway/main.go",
      "cwd": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Debug All Services",
      "configurations": ["User Service", "API Gateway"],
      "preLaunchTask": "",
      "stopAll": true
    }
  ]
}
